<div class="chat-card weapon" data-item-id="{{item.id}}" data-owner-id="{{actor._id}}" data-token-id="{{token.uuid}}">

    <header class="card-header">
      <div class="attackbox">
        <h1 class="boxline chat-window-header" style="margin: 0px">
          <span>{{localize "fantasycraft.attack"}} - {{item.name}}</span>
        </h1>
    </header>

    <div class="dice-roll">
        <div class="dice-result">
            <div class="dice-formula">
                {{data.formula}}
            </div>
            <div class="dice-tooltip">
                <section class="tooltip-part">
                    <div class="dice">
                        <header class="part-header flexrow">
                            <span class="part-formula">{{data.formula}}</span>
                            {{#if this.flavor}}<span class="part-flavor">{{data.flavor}}</span>{{/if}}
                            <span class="part-total">{{data.diceRoll}}</span>
                        </header>
                        <ol class="dice-rolls">
                        {{#each data.rolls}}
                            <li class="roll {{data.classes}}">{{{data.result}}}</li>
                        {{/each}}
                        </ol>
                    </div>
                </section>
            </div>
            <div class="dice-total {{#if data.threat}}threat{{/if}} {{#if data.error}}error{{/if}} ">
                {{data.roll}}
            </div>
        </div>
    </div>

    {{#if data.trick1}}
    <div class="card-content">
        <div><b>{{localize "fantasycraft.trick"}}: </b></div>
        <div>{{data.trick1.name}}</div>
        {{#compare data.trick2 "" operator="!="}}
            <div>{{data.trick2.name}}</div>
        {{/compare}}
    </div>
    {{/if}}

    <div class="card-content">
        {{#if data.areaSize}}
        <div><b>{{localize "fantasycraft.area"}}: </b></div>
        <div>{{data.areaSize}} {{localize "fantasycraft.ft"}} {{data.areaShape}}</div>
        {{/if}}
        <div>
            <b>{{localize "fantasycraft.weaponProperties"}}: </b>
            {{#compare data.attackType "extraSave" operator="=="}}
                {{data.saveType}}
            {{/compare}}
            {{#each data.qualities as |quality id|}}
                {{#if quality}}
                {{#compare quality "0" operator="!="}}
                {{#compare quality "none" operator="!="}}
                    {{localize (lookup ../data.properties id)}}{{#if (isBool quality)}}{{else}} {{quality}}{{/if}}
                {{/compare}}
                {{/compare}}
                {{/if}}
            {{/each}}
        </div>
    </div>

</div>