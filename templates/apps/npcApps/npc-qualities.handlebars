<form autocomplete="off" onsubmit="event.preventDefault();">
{{! Spellcasting grade dropdown}}
    {{#if classFeatures}}
    <section>
        <label><h4 class="box-title">{{localize "fantasycraft.classFeatures"}}</h4></label>
        {{#each classFeatures as |ability id|}}
            <div class="item ownedItem item-card flexrow" data-item-id="{{_id}}" data-item-name="{{ability.name}}">
                <span class="flex5">{{ability.name}}
                {{#compare ability.system.xpMultiplier "grades" operator="=="}}
                    {{ability.system.grades.value}}
                {{/compare}}
                {{#compare ability.system.xpMultiplier "points" operator="=="}}
                    {{ability.system.number}}
                {{/compare}}
                </span>
                <span class="right-align-text">
                    <a class="editItem">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a class="deleteItem">
                        <i class="fas fa-trash"></i>
                    </a>
                </span>
            </div>
        {{/each}}
    </section>
    {{/if}}
    {{#if feats}}
    <section>
        <label><h4 class="box-title">{{localize "fantasycraft.feats"}}</h4></label>
        {{#each feats as |feat id|}}
            <div class="item ownedItem item-card flexrow" data-item-id="{{_id}}" data-item-name="{{feat.name}}">
                <span class="flex5">{{feat.name}}</span>
                <span class="right-align-text">
                    <a class="editItem">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a class="deleteItem">
                        <i class="fas fa-trash"></i>
                    </a>
                </span>
            </div>
        {{/each}}
    </section>
    {{/if}}
    {{#if paths}}
    <section>
        <label><h4 class="box-title">{{localize "fantasycraft.paths"}}</h4></label>
        {{#each paths as |path id|}}
            <div class="item ownedItem item-card flexrow" data-item-id="{{_id}}" data-item-name="{{path.name}}">
                <span class="flex5">{{path.name}}</span>
                <select class="changeGrade" name="pathStep">
                    {{#select system.pathStep}}
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    {{/select}}
                </select>

                <span class="right-align-text">
                    <a class="editItem">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a class="deleteItem">
                        <i class="fas fa-trash"></i>
                    </a>
                </span>
            </div>
        {{/each}}
    </section>
    {{/if}}
    {{#if tricks}}
    <section>
        <label><h4 class="box-title">{{localize "fantasycraft.tricks"}}</h4></label>
        {{#each tricks as |trick id|}}
            <div class="item ownedItem item-card flexrow" data-item-id="{{_id}}" data-item-name="{{trick.name}}">
                <span class="flex5">{{trick.name}}</span>
                <span class="right-align-text">
                    <a class="editItem">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a class="deleteItem">
                        <i class="fas fa-trash"></i>
                    </a>
                </span>
            </div>
        {{/each}}
    </section>
    {{/if}}
    <section>
        <label><h4 class="box-title">{{localize "fantasycraft.qualities"}}</h4></label>
        {{#each qualities as |quality id|}}
            <div class="item ownedItem item-card flexrow" data-item-id="{{_id}}" data-item-name="{{quality.name}}">
            <span class="flex5">{{quality.name}}
                {{#compare quality.system.xpMultiplier "grades" operator="=="}}
                    {{quality.system.grades.value}}
                {{/compare}}
                {{#compare quality.system.xpMultiplier "points" operator="=="}}
                    {{quality.system.number}}
                {{/compare}}
                </span>
                
                {{#compare system.xpMultiplier "points" operator="=="}}
                    <input style="height: 18px;" class="changeGrade" type="number" name="number" value="{{system.number}}" />
                {{/compare}}

                {{#compare system.xpMultiplier "grades" operator="=="}}
                <select style="height: 18px;" class="changeGrade" name="grades.value">
                    {{selectOptions quality.system.grades.gradeArray selected=quality.system.grades.value localize=true}}
                </select>
                {{/compare}}

                <span class="right-align-text">
                    <a class="editItem">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a class="deleteItem">
                        <i class="fas fa-trash"></i>
                    </a>
                </span>
            </div>
        {{/each}}
    </section>

    <button class="submit" type="submit"><i class="far fa-save"></i> {{ localize "fantasycraft.traitSave"}}</button>
</form>